{
  "rules": [
    {
      "id": "high-value-transaction",
      "name": "High Value Transaction Alert",
      "priority": 1,
      "condition": {
        "type": "greaterThan",
        "field": "amount",
        "value": 1000
      },
      "actions": [
        {
          "type": "alert",
          "value": "high-value"
        }
      ]
    },
    {
      "id": "fraud-detection",
      "name": "Potential Fraud Detection",
      "priority": 2,
      "condition": {
        "type": "and",
        "conditions": [
          {
            "type": "equals",
            "field": "country",
            "value": "US"
          },
          {
            "type": "greaterThan",
            "field": "amount",
            "value": 5000
          }
        ]
      },
      "actions": [
        {
          "type": "flag",
          "value": "fraud-review"
        }
      ]
    }
  ]
}
